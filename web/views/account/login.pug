extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Acceso
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='name') Usuario
      .col-md-7
        input.form-control(type='text', name='name', id='name', placeholder='Nombre de usuario', autofocus, required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='password') Contraseña
      .col-md-7
        input.form-control(type='password', name='password', id='password', placeholder='Contraseña', required)
    .form-group
      .offset-md-3.col-md-7.pl-2
        button.col-md-3.btn.btn-primary(type='submit')
          i.far.fa-user.fa-sm
          | Acceder
        // a.btn.btn-link(href='/forgot') Forgot your password?
    .form-group
      .offset-md-3.col-md-7.pl-2
        hr
