.navbar.navbar-light.fixed-top.navbar-expand-lg
  .container
    a.navbar-brand(href='/')
      i.fas.fa-cube
      | LanOctopus
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse')
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.nav-item(class=(title === 'Home') ? 'active' : undefined)
          a.nav-link(href='/') Inicio
        li.nav-item(class=(title === 'Contact') ? 'active' : undefined)
          a.nav-link(href='/contact') Contacto
        li.nav-item(class=(title === 'Status') ? 'active' : undefined)
          a.nav-link(href='/statusapp') Estado de la App
      ul.nav.navbar-nav.ml-auto
        if !user
          li.nav-item(class=(title === 'Login') ? 'active' : undefined)
            a.nav-link(href='/login') Acceso
          //- li.nav-item(class=(title === 'Create Account') ? 'active' : undefined)
          //-   a.nav-link(href='/signup') Create Account
        else
          if isAdmin
            li.dropdown(class=(title === 'LDAP') ? 'active' : undefined).nav-item
              a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
                span LDAP
                i.caret          
              ul.dropdown-menu
                li.dropdown-item
                  a(href='/ldap/users') Usuarios
                li.dropdown-item
                  a(href='/ldap/groups') Grupos



            li.dropdown(class=(title === 'Monitorizar') ? 'active' : undefined).nav-item
              a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
                span Monitorización
                i.caret          
              ul.dropdown-menu
                li.dropdown-item
                  a(href='/computer') Equipos
                li.dropdown-item
                  a(href='/user') Usuarios
                li.divider.dropdown-item
                li.dropdown-item
                  a(href='/status') Tiempo real


          //- li.nav-item(class=(title === 'Computer') ? 'active' : undefined)
          //-   a.nav-link(href='/computer') Computers
          //- li.nav-item(class=(title === 'System Status') ? 'active' : undefined)
          //-   a.nav-link(href='/status') System Status


          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined).nav-item
            a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.fullName || user.userName || user.id
              i.caret
            ul.dropdown-menu
              li.dropdown-item
                a(href='/account') Mi Perfíl
              li.dropdown-item
                a(href='/user/'+user.name) Mis sesiones
              li.divider.dropdown-item
              li.dropdown-item
                a(href='/logout') Salida
